body.home .section#content
  p:first-of-type
    font-size: 125%
    padding: 0 0 m*2
    margin: 0 0 m*2
    border-bottom: 1px solid #ddd

body.store .section#content
  h2
    font bold 75% serif
    color #666
    text-transform uppercase
    letter-spacing 2px
    margin: 0 0 1em
  ul.products
    li.product
      h3
        font-size 1.5em
      a.img
        display: block
        border 1px solid #ddd
        padding 2px
        background #fff
        margin: .5em 0
        &:hover
          border-color: anchor

      p.price
        font-size: 1.5em
        line-height: m*3
        float: left

      p.buy a
        display inline-block
        float: right
        line-height m*3 - 2px
        color #fff
        text-shadow b30 0 1px 0
        padding 0 1em
        border-radius(5px)
        border 1px solid anchor
        linear-gradient hsl(hue2,100,60), hsl(hue2,100,45)
        box-shadow b30 1px 1px 3px, inset w50 0 0 5px
        &:hover
          border-color anchorh
          linear-gradient hsl(hue,100,60), hsl(hue,100,45)

.section#content
  cnt()
  padding: 3em 0 5em
  .article
    font 16px/1.5 serif
    col 240
    p
      margin 0 0 m
     
      span.drop
        display: block
        float: left
        font: 5.2em/.86 serif
        padding-right: m*.5
        text-smoothing()

  .nav
    col 60
    padding-left: c*60
    ul
      li
        border-top: 1px solid #ddd
        &.inactive
          a
            color #ddd
        a
          display block
          padding: 0 .5em
          line-height: 3em
